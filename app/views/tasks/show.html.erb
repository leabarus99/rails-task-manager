<h1><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<p class="choice"><%= link_to "Edit task", edit_task_path %></p>

<p class="choice"><%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></p>

<p class="choice"><%= link_to "Back to list", tasks_path %></p>
